<script>
  function handleCheckboxChange(itemId, listName) {
    const data = {
      itemId: itemId,
      listName: listName
    };

    fetch('/checkbox-change', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json'
      },
      body: JSON.stringify(data)
    })
    .then(response => {
      if (response.ok) {
        // Reload the page to reflect the updated list
        location.reload();
      }
    })
    .catch(error => {
      console.error('Error:', error);
    });
  }
</script>

